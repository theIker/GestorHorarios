<?import javafx.scene.text.Font?>

<View fx:id="datosEmpleado" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="335.0" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gestorhorarios.views.DatosEmpleadoPresenter">
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <children>
            <Label fx:id="lbDni" text="DNI:" />
            <TextField fx:id="tfDni">
               <VBox.margin>
                  <Insets bottom="5.0" />
               </VBox.margin>
            </TextField>
            <Label fx:id="lbNombre" text="Nombre:">
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="tfNombre">
               <VBox.margin>
                  <Insets bottom="5.0" />
               </VBox.margin>
            </TextField>
            <Label fx:id="lbApellido1" text="1º Apellido:">
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="tfApellido1">
               <VBox.margin>
                  <Insets bottom="5.0" />
               </VBox.margin>
            </TextField>
            <Label fx:id="lbApellido2" text="2º Apellido:">
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="tfApellido2">
               <VBox.margin>
                  <Insets bottom="5.0" />
               </VBox.margin>
            </TextField>
            <Label fx:id="lbEmail" text="Email:">
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="tfEmail">
               <VBox.margin>
                  <Insets bottom="5.0" />
               </VBox.margin>
            </TextField>
            <Hyperlink fx:id="resPass" onAction="#handleOnActionResPass" text="Restablecer contraseña" visible="false" />
            <Label fx:id="lbPerfil" text="Perfil:">
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </Label>
            <ComboBox fx:id="cbPerfil" prefHeight="28.0" prefWidth="308.0">
               <VBox.margin>
                  <Insets bottom="5.0" />
               </VBox.margin>
            </ComboBox>
            <Label fx:id="lbJornadas" text="Jornadas:">
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </Label>
            <ComboBox fx:id="cbJornadas" prefHeight="28.0" prefWidth="337.0">
               <VBox.margin>
                  <Insets bottom="5.0" />
               </VBox.margin>
            </ComboBox>
            <HBox alignment="CENTER_LEFT" prefHeight="35.0" prefWidth="295.0">
               <children>
                  <Button fx:id="btnAnyadir" alignment="CENTER" mnemonicParsing="false" onAction="#handleOnActionAddJornada"  textAlignment="CENTER">
                     <font>
                        <Font size="10.0" />
                     </font>
                  </Button>
                  <Label fx:id="lbAnyadirJornada" text="Añadir jornada">
                     <HBox.margin>
                        <Insets left="5.0" right="5.0" />
                     </HBox.margin>
                  </Label>
                  <Button fx:id="btnBorrar" alignment="CENTER" minWidth="18.0" mnemonicParsing="false" onAction="#handleOnActionBorrarJornada" prefHeight="22.0" prefWidth="18.0"  textAlignment="CENTER">
                     <font>
                        <Font size="10.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="5.0" />
                     </HBox.margin>
                  </Button>
                  <Label fx:id="lbBorrarJornada" text="Borrar jornada">
                     <HBox.margin>
                        <Insets left="5.0" />
                     </HBox.margin>
                  </Label>
               </children>
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="btnBorrarUsuario" mnemonicParsing="false" onAction="#handleOnActionBorrar" text="BORRAR USUARIO">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="btnGuardarUsuario" mnemonicParsing="false" onAction="#handleOnActionGuardar" text="GUARDAR">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
</View>
